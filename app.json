{
  "expo": {
    "name": "Whagons",
    "slug": "whagons",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/whagons-check.png",
      "resizeMode": "contain",
      "backgroundColor": "#121614"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.whagons.whagons",
      "googleServicesFile": "./GoogleService-Info.plist"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A3B30"
      },
      "package": "com.whagons.whagons",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you attach images to tasks.",
          "cameraPermission": "The app accesses your camera to let you take photos for tasks."
        }
      ],
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      "@react-native-google-signin/google-signin"
    ]
  }
}
